# PostgreSQL Database Configuration
# IMPORTANT: Change these values for production deployments!
# Using weak or default passwords in production is a security risk.
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=your_postgres_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ws_scoring

# PostgreSQL Connection String (recommended; alternative to individual vars above)
# The application checks this first; if set, POSTGRES_HOST, POSTGRES_PORT, POSTGRES_USER,
# POSTGRES_PASSWORD, and POSTGRES_DB are ignored to avoid conflicting settings.
POSTGRESQL_CONNECTION_STRING=postgresql://your_postgres_user:your_secure_password_here@localhost:5432/ws_scoring

# Application Configuration
PORT=3000
CORS_ALLOWED_ORIGIN=http://localhost:3000

