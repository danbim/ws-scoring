tmpfile=$(mktemp)
trap "rm -f $tmpfile" EXIT

# Force color output to preserve ANSI codes
export FORCE_COLOR=1

FORCE_COLOR=1 bun run test > "$tmpfile" 2>&1
status=$?
if [ $status -ne 0 ]; then
  cat "$tmpfile"
  echo "âŒ Tests failed. Commit aborted."
  exit 1
else
  echo "âœ… Tests passed"
fi

FORCE_COLOR=1 bun check > "$tmpfile" 2>&1
status=$?
if [ $status -ne 0 ]; then
  cat "$tmpfile"
  echo "âŒ Lint/format check failed. Commit aborted."
  echo "ğŸ’¡ Run 'bun run lint:fix' or 'bun run format' to fix issues."
  exit 1
else
  echo "âœ… Lint and format check passed"
fi

FORCE_COLOR=1 bun typecheck > "$tmpfile" 2>&1
status=$?
if [ $status -ne 0 ]; then
  cat "$tmpfile"
  echo "âŒ Type check failed. Commit aborted."
  exit 1
else
  echo "âœ… Type check passed"
fi

echo "âœ… All pre-commit checks passed!"
